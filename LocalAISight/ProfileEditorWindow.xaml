<Window x:Class="LocalAISight.ProfileEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Redigera profil" Height="350" Width="400">
    <StackPanel Margin="10">
        <Label Content="Namn:"/>
        <TextBox x:Name="NameBox" Margin="0,0,0,10"/>
        <Label Content="Modell:"/>
        <TextBox x:Name="ModelBox" Margin="0,0,0,10"/>
        <Label Content="Systemmeddelande:"/>
        <TextBox x:Name="SystemBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
        <Label Content="Standardfraga:"/>
        <TextBox x:Name="DefaultBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Spara" Width="80" Margin="5" Click="Save_Click"/>
            <Button Content="Avbryt" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>