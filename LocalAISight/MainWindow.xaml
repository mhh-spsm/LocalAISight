<Window x:Class="LocalAISight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalAISight"
        mc:Ignorable="d"
        Title="LocalAISight" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="10">
        <Button x:Name="TargetButton" Content="Välj fönster" Click="TargetButton_Click" Margin="5" Padding="10"/>
        <Button x:Name="CaptureButton" Content="Beskriv!" Click="CaptureButton_Click" Margin="5" Padding="10"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="DescriptionBox" 
                 TextWrapping="Wrap" 
                 Focusable="True"
                 IsReadOnlyCaretVisible="True" 
                 AutomationProperties.LiveSetting="Polite"
                 IsReadOnly="True"
                 AutomationProperties.Name="Beskrivningar"
                 Text="Väntar på första beskrivningen..."
                 Background="#F0F0F0"
                 Padding="10"/>
        </ScrollViewer>

        <DockPanel Grid.Row="2" Margin="10">
            <TextBox x:Name="UserQuestionBox" AutomationProperties.Name="Skriv din fråga här" VerticalContentAlignment="Center" Height="35" GotFocus="UserQuestionBox_GotFocus" />
            <Button x:Name="AskButton" Content="Skicka Fråga" Click="AskButton_Click" DockPanel.Dock="Right" Padding="15,0" Margin="10,0,0,0" IsDefault="True"/>
        </DockPanel>
    </Grid>
</Window>
